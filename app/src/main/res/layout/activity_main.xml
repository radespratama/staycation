<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/containerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:id="@+id/headerContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/SSName"
                    android:src="@drawable/profile_avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi!,"
                    android:textSize="16dp"
                    android:textColor="@color/gray_900"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rades Pratama"
                    android:textSize="16dp"
                    android:textColor="@color/gray_900"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:contentDescription="@string/SSName"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bell_icon"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/heroContent"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_search"
            android:textSize="28dp"
            android:textColor="@color/gray_900"
            android:fontFamily="@font/outfit_bold"
            />
        
        <EditText
            android:id="@+id/searchContent"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search Destination"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/outfit_regular"
            android:textSize="14dp"
            android:textColor="@color/gray_900"
            android:textColorHint="@color/gray_300"
            android:background="@drawable/custom_input_search"
            android:drawableEnd="@drawable/ic_search_icon"
            android:drawablePadding="12dp"
            android:maxLength="40"
            />

        <LinearLayout
            android:id="@+id/categoryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="34dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_900"
                    android:fontFamily="@font/outfit_bold"
                    android:text="Choose category"
                    android:textSize="18dp"
                    android:layout_weight="4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="See All"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/gray_300"
                    android:textAlignment="textEnd"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scrollbars="none"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/toCategoryOne"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription=""
                        android:src="@drawable/img_category_one" />

                    <ImageView
                        android:id="@+id/toCategoryTwo"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription=""
                        android:src="@drawable/img_category_two" />

                    <ImageView
                        android:id="@+id/toCategoryThree"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription=""
                        android:src="@drawable/img_category_three" />

                    <ImageView
                        android:id="@+id/toCategoryFour"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:contentDescription=""
                        android:src="@drawable/img_category_four" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favoriteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_900"
                    android:fontFamily="@font/outfit_bold"
                    android:text="Favorite Place"
                    android:textSize="18dp"
                    android:layout_weight="4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Explore"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/gray_300"
                    android:textAlignment="textEnd"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scrollbars="none"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/toFavoriteOne"
                        android:layout_width="150dp"
                        android:layout_height="190dp"
                        android:contentDescription=""
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_destination_one" />

                    <ImageView
                        android:id="@+id/toFavoriteTwo"
                        android:layout_width="150dp"
                        android:layout_height="190dp"
                        android:contentDescription=""
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_destination_two" />

                    <ImageView
                        android:id="@+id/toFavoriteThree"
                        android:layout_width="150dp"
                        android:layout_height="190dp"
                        android:contentDescription=""
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_destination_three" />

                    <ImageView
                        android:id="@+id/toFavoriteFour"
                        android:layout_width="150dp"
                        android:layout_height="190dp"
                        android:contentDescription=""
                        android:layout_marginRight="10dp"
                        android:src="@drawable/img_destination_four" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popularContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_900"
                    android:fontFamily="@font/outfit_bold"
                    android:text="Popular Package"
                    android:textSize="18dp"
                    android:layout_weight="4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="See All"
                    android:fontFamily="@font/outfit_regular"
                    android:textColor="@color/gray_300"
                    android:textAlignment="textEnd"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/toPackageOne"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:contentDescription=""
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/img_package_one" />

                <ImageView
                    android:id="@+id/toPackageTwo"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:contentDescription=""
                    android:src="@drawable/img_package_two" />

            </LinearLayout>
        </LinearLayout>







    </LinearLayout>
</ScrollView>