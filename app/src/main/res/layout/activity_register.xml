<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonBackToStartTwo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_arrow_dark" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="center"
            android:fontFamily="@font/outfit_bold"
            android:textColor="@color/gray_900"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an account so you can explore this apps."
            android:textAlignment="center"
            android:fontFamily="@font/outfit_regular"
            android:textColor="@color/gray_900"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        >

        <EditText
            android:id="@+id/usernameField"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Username"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/outfit_regular"
            android:textSize="14dp"
            android:textColor="@color/gray_900"
            android:textColorHint="@color/gray_300"
            android:background="@drawable/custom_input_search"
            android:drawableEnd="@drawable/ic_profile"
            android:drawablePadding="12dp"
            android:maxLength="50"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="23dp"
            android:fontFamily="@font/outfit_regular"
            android:textSize="14dp"
            android:textColor="@color/gray_900"
            android:textColorHint="@color/gray_300"
            android:background="@drawable/custom_input_search"
            android:drawableEnd="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:maxLength="50"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/outfit_regular"
            android:textSize="14dp"
            android:textColor="@color/gray_900"
            android:textColorHint="@color/gray_300"
            android:background="@drawable/custom_input_search"
            android:drawableEnd="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/buttonHandlerRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_button_rounded"
            android:fontFamily="@font/outfit_semi_bold"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Create an Account"
            android:textColor="@color/gray_900"
            android:textSize="18dp"
            />

    </LinearLayout>

</RelativeLayout>